<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:id="@+id/scrollView"
    tools:context="sg.edu.rp.c346.healthylifestylelearningguide.EatingHabits">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/healthyfoods"
            android:layout_marginBottom="30dp"
            android:id="@+id/imageView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textColor="#a0522d"
            android:layout_marginBottom="-30dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textViewEatingDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="10dp"
            android:layout_marginBottom="-20dp"
            android:layout_marginLeft="10dp"
            android:textSize="17dp"
            android:textColor="#000"
            android:id="@+id/textViewEatingSentences" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-30dp"
            android:layout_marginLeft="10dp"
            android:textSize="22dp"
            android:textColor="#000"
            android:id="@+id/textViewTipsEating" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-30dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textColor="#000"
            android:id="@+id/textViewEatingTip1" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-30dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textColor="#000"
            android:lineSpacingExtra="10dp"
            android:id="@+id/textViewEatingTip2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-30dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textColor="#000"
            android:lineSpacingExtra="10dp"
            android:id="@+id/textViewEatingTips3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-10dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textColor="#000"
            android:id="@+id/textViewEatingTips4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-40dp"
            android:layout_marginLeft="10dp"
            android:textSize="22dp"
            android:textColor="#000"
            android:id="@+id/textViewAdvice" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="10dp"
            android:layout_marginBottom="-30dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textColor="#000"
            android:id="@+id/textViewAdvice1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="10dp"
            android:layout_marginBottom="-30dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textColor="#000"
            android:id="@+id/textViewAdvice2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="10dp"
            android:layout_marginBottom="-30dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textColor="#000"
            android:id="@+id/textViewAdvice3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-30dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textColor="#000"
            android:id="@+id/textViewEatingLinks" />


    </LinearLayout>

</ScrollView>
