<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="sg.edu.rp.c346.healthylifestylelearningguide.instruction">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewInstruction"
        android:layout_gravity="center"
        android:textColor="#F00"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:text="1. There are 4 different category to teach you simpler steps of staying healthy. There are different methods/types with specific steps/description to deepen your understanding on staying healthy."
        android:layout_gravity="top"
        android:layout_margin="10dp"
        android:textSize="19dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. There is a quiz based on basic and advanced level that will test your understanding about health."
        android:id="@+id/textView"
        android:layout_margin="10dp"
        android:textSize="19dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. It is strongly recommended for you to go through all the 4 categories of healthy lifestyle before proceeding to do quiz."
        android:id="@+id/textView2"
        android:layout_margin="10dp"
        android:textSize="19dp"/>

</LinearLayout>
