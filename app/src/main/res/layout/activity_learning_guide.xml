<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="sg.edu.rp.c346.healthylifestylelearningguide.LearningGuide">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose any of the 4 categories below to understand about different methods to stay healthy:"
        android:textSize="20dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:id="@+id/textView3" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/exercise"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="#ffff00"
        android:id="@+id/buttonExercise" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/timeManagement"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="#4169e1"
        android:id="@+id/buttonTime" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/eatingHabit"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="#66cdaa"
        android:id="@+id/buttonEating" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/stressManagement"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="#ff4500"
        android:id="@+id/buttonStress" />

</LinearLayout>
