<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:id="@+id/scrollView"
    tools:context="sg.edu.rp.c346.healthylifestylelearningguide.StressManagement">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="270px"
            android:background="@drawable/stress"
            android:id="@+id/imageView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ff0000"
            android:layout_marginBottom="-30dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/textViewAboutStress" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="10dp"
            android:layout_marginBottom="-30dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:id="@+id/textViewStressSentence" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-30dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:id="@+id/textViewStressTipsSentence" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-30dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:id="@+id/textViewStressTips1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-30dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:id="@+id/textViewStressTips2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-30dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:id="@+id/textViewStressTips3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-30dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:id="@+id/textViewStressTips4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-30dp"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:id="@+id/textViewStressTips5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="16dp"
            android:id="@+id/textViewDetailsStress" />


    </LinearLayout>

</ScrollView>
